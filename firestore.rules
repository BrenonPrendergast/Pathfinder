rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
    }
    
    // Users can read and write their own profile data, admins can read all users
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if isAdmin();
      allow write: if isAdmin(); // Admins can update user roles
    }
    
    // Anyone can read careers, only admins can write
    match /careers/{careerDoc} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Anyone can read quests, only admins can write
    match /quests/{questDoc} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Anyone can read achievements, only admins can write
    match /achievements/{achievementDoc} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // User-specific quest progress
    match /user-quests/{userQuestDoc} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // User achievements
    match /user-achievements/{userAchievementDoc} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // User skill progress - users can read/write their own skill data
    match /user-skills/{userSkillDoc} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Hard skills - anyone can read, only admins can write
    match /hard-skills/{hardSkillDoc} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Certifications - anyone can read, only admins can write
    match /certifications/{certificationDoc} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // User certifications - users can read/write their own
    match /user-certifications/{userCertificationDoc} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Career paths - users can read/write their own
    match /career-paths/{careerPathDoc} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Skill assessments - users can read/write their own
    match /skill-assessments/{assessmentDoc} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
  }
}
